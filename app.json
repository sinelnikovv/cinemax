{
  "expo": {
    "scheme": "cinemax",
    "name": "Cinemax",
    "slug": "Cinemax",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/appIcon.png",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#171725",
    "splash": {
      "image": "./src/assets/images/splashScreen.png",
      "resizeMode": "cover",
      "backgroundColor": "#171725"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.sinelnikov.cinemax",
      "googleServicesFile": "./firebase/GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "The app accesses your camera to let you share photos with your friends.",
        "NSPhotoLibraryUsageDescription": "The app accesses your photos to let you share them with your friends.",
        "branch_universal_link_domains": [
          "applinks:wtmmf.app.link",
          "applinks:wtmmf-alternate.app.link"
        ]
      },
      "associatedDomains": [
        "applinks:wtmmf.app.link",
        "applinks:wtmmf-alternate.app.link"
      ]
    },
    "androidStatusBar": {
      "translucent": true
    },
    "android": {
      "package": "com.sinelnikov.cinemax",
      "googleServicesFile": "./firebase/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/appIcon.png",
        "backgroundColor": "#171725"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "wtmmf.app.link"
            },
            {
              "scheme": "https",
              "host": "wtmmf.app.link"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-font",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-google-signin/google-signin",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "cameraPermission": "The app accesses your camera to let you share photos with your friends.",
          "microphonePermission": false
        }
      ]
    ],
    "packagerOpts": {
      "sourceExts": ["js", "jsx", "svgx"],
      "transformer": "node_modules/react-native-svg-transformer/index.js"
    }
  }
}
